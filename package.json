{
  "name": "express-typescript-starter",
  "version": "1.0.0",
  "description": "A minimal boilerplate for express projects written in typescript",
  "main": "server.js",
  "scripts": {
    "start": "nodemon ./src/server.js",
    "compile": "tsc -w ./src/routes/routes.ts ./src/server.ts -t es2015 -m commonjs"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript"
  ],
  "author": "diego-c",
  "license": "MIT",
  "dependencies": {
    "ejs": "^2.5.7",
    "express": "^4.16.2"
  },
  "devDependencies": {
    "@types/ejs": "^2.5.0",
    "@types/express": "^4.0.39",
    "@types/node": "^8.5.1"
  }
}
